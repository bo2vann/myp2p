<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_content_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_content_bg"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/message_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/system_radio"
                style="@style/CommonTab"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="35dp"
                android:checked="true"
                android:text="@string/system_notice" />

            <RadioButton
                android:id="@+id/mine_radio"
                style="@style/CommonTab"
                android:layout_marginRight="40dp"
                android:text="@string/mine_message" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C7C7CD" />

        <RelativeLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>