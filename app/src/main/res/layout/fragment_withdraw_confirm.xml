<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_content_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/withdraw_info"
        android:textColor="#4a4a4a"
        android:textSize="14sp" />

    <LinearLayout style="@style/MenuListPanel">

        <LinearLayout
            style="@style/MenuListItem"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <TextView
                style="@style/MenuListItemText1"
                android:text="@string/withdraw_amount" />

            <TextView
                android:id="@+id/withdraw_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff6a00"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            style="@style/Divide"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="18dp" />

        <LinearLayout
            style="@style/MenuListItem"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <TextView
                style="@style/MenuListItemText1"
                android:text="@string/fee" />

            <TextView
                android:id="@+id/fee_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            style="@style/Divide"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="18dp" />

        <LinearLayout
            style="@style/MenuListItem"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <TextView
                style="@style/MenuListItemText1"
                android:text="@string/actual_withdraw_amount" />

            <TextView
                android:id="@+id/actual_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff6a00"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/withdraw_info"
        android:textColor="#4a4a4a"
        android:textSize="14sp" />

    <LinearLayout style="@style/MenuListPanel">

        <LinearLayout
            style="@style/MenuListItem"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <TextView
                style="@style/MenuListItemText1"
                android:text="@string/account_name" />

            <TextView
                android:id="@+id/account_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            style="@style/Divide"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="18dp" />

        <LinearLayout
            style="@style/MenuListItem"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <TextView
                style="@style/MenuListItemText1"
                android:text="@string/bankcard" />

            <TextView
                android:id="@+id/bankcard_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/withdraw_btn"
        style="@style/BtnTheme2"
        android:layout_marginTop="27dp"
        android:text="@string/withdraw" />
</LinearLayout>