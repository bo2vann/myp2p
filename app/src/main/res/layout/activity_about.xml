<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_content_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_content_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="54dp"
            android:src="@mipmap/logo" />

        <LinearLayout style="@style/MenuListPanel">

            <LinearLayout
                android:id="@+id/app_layout"
                style="@style/MenuListItem">

                <TextView
                    style="@style/MenuListItemText1"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0"
                    android:textColor="#a4aab3"
                    android:textSize="14sp" />

                <ImageView style="@style/MenuListItemArrow" />

            </LinearLayout>

            <View
                style="@style/Divide"
                android:layout_marginLeft="22dp" />

            <LinearLayout
                android:id="@+id/safe_layout"
                style="@style/MenuListItem">

                <TextView
                    style="@style/MenuListItemText1"
                    android:text="@string/security_guarantee"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <ImageView style="@style/MenuListItemArrow" />

            </LinearLayout>

            <View
                style="@style/Divide"
                android:layout_marginLeft="22dp" />

            <LinearLayout
                android:id="@+id/problem_layout"
                style="@style/MenuListItem">

                <TextView
                    style="@style/MenuListItemText1"
                    android:text="@string/common_problem"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <ImageView style="@style/MenuListItemArrow" />

            </LinearLayout>

            <View
                style="@style/Divide"
                android:layout_marginLeft="22dp" />

            <!-- <LinearLayout style="@style/MenuListItem">

                 <TextView
                     style="@style/MenuListItemText1"
                     android:text="@string/give_a_high_praise" />

                 <ImageView style="@style/MenuListItemArrow" />

             </LinearLayout>

             <View
                 style="@style/Divide"
                 android:layout_marginLeft="22dp" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/support"
                android:textColor="#fb4552"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>