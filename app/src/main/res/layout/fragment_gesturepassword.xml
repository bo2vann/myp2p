<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/gesture_pwd_setting_preview"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp">

            <View
                android:id="@+id/gesture_pwd_setting_preview_0"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/gesture_create_grid_item_bg" />

            <View
                android:id="@+id/gesture_pwd_setting_preview_1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/gesture_create_grid_item_bg" />

            <View
                android:id="@+id/gesture_pwd_setting_preview_2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/gesture_create_grid_item_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="8dp">

            <View
                android:id="@+id/gesture_pwd_setting_preview_3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/gesture_create_grid_item_bg" />

            <View
                android:id="@+id/gesture_pwd_setting_preview_4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/gesture_create_grid_item_bg" />

            <View
                android:id="@+id/gesture_pwd_setting_preview_5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/gesture_create_grid_item_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="8dp">

            <View
                android:id="@+id/gesture_pwd_setting_preview_6"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/gesture_create_grid_item_bg" />

            <View
                android:id="@+id/gesture_pwd_setting_preview_7"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/gesture_create_grid_item_bg" />

            <View
                android:id="@+id/gesture_pwd_setting_preview_8"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/gesture_create_grid_item_bg" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/gesture_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:textColor="#4a4a4a"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/gesture_pwd_create_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal"
        android:text="@string/gesture_password_draw_unlock"
        android:textColor="#4a4a4a"
        android:textSize="16sp" />

    <com.think.android.p2p.ui.safe.gesturepwd.LockPatternView
        android:id="@+id/gesture_pwd_create_lock"
        android:layout_width="288dp"
        android:layout_height="288dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:padding="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forget_gesture_pwd_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="64dp"
            android:text="@string/gesture_password_forget" />

    </RelativeLayout>

    <View
        android:id="@+id/gesture_pwd_create_gap4"
        android:layout_width="match_parent"
        android:layout_height="10.0dip"
        android:layout_weight="1.0" />

</LinearLayout>