<resources>

    <!--
         Base application theme, dependent on API level. This theme is replaced
         by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
     -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionSheetStyle">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="actionSheetItemHeight">57dp</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#0076ff</item>
        <item name="otherButtonTextColor">#fe3824</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">20sp</item>
    </style>

    <style name="Divide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E5E5E5</item>
    </style>

    <!-- 确认按钮样式1 -->
    <style name="BtnTheme1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/btn_bg1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 输入列表样式1 -->
    <style name="InputPanel1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/input_panel1</item>
    </style>

    <!-- 输入样式1 -->
    <style name="InputTheme1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#C7C7CD</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 请求短信按钮样式1 -->
    <style name="MsgBtn1">
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/btn_msg_able_bg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#C7C7CD</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- 确认按钮样式2 -->
    <style name="BtnTheme2" parent="BtnTheme1">
        <item name="android:background">@drawable/btn_bg2</item>
        <item name="android:textColor">@color/btn_textColor2</item>
    </style>

    <style name="BtnTheme3" parent="BtnTheme1">
        <item name="android:background">@drawable/btn_bg3</item>
        <item name="android:textColor">#335599</item>
    </style>

    <!-- 输入列表样式2 -->
    <style name="InputPanel2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="InputPanelItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InputPanelText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InputPanelEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 输入样式2 -->
    <style name="InputTheme2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#C7C7CD</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 投资页面按钮 -->
    <style name="InvestBtn" parent="BtnTheme2">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@drawable/invest_btn</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="InvestTableItemFirt">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:textColor">#768798</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="InvestTableItemSecond">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:text">@string/getting</item>
    </style>

    <!-- 菜单列表 -->
    <style name="MenuListPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MenuListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MenuListItemText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MenuListItemArrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@mipmap/icon_arrow</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="CommonTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/common_radio_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/common_radio_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseInfoFirst">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/invest_base_info_first</item>
        <item name="android:textColor">#335599</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="BaseInfoSecond">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/invest_base_info_second</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="DialogClose">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:src">@mipmap/close</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WithdrawSuccessItem1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_weight">27</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#c7c7cd</item>
    </style>

    <style name="MyInvestItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyInvestItemFirst">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="MyInvestItemSecond">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#778899</item>
    </style>

</resources>
